<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/appwidget_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        android:background="@color/background"
        android:text="@string/appwidget_example_title_text"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/appwidget_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appwidget_title_text"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        android:background="@color/background"
        android:text="@string/appwidget_exmaple_time_text"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp" />

</RelativeLayout>