<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:elevation="0dp">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_padding"
        android:paddingTop="@dimen/card_padding"
        android:paddingStart="@dimen/card_padding"
        android:paddingEnd="@dimen/card_padding"
        android:paddingBottom="@dimen/card_padding"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="@color/cardview_light_background"
        card_view:cardUseCompatPadding="true"
        android:elevation="2dp">
        <!--todo update the elevation above to work with api 18 -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/card_padding"
            android:paddingEnd="@dimen/card_padding"
            android:paddingTop="@dimen/card_padding"
            android:paddingBottom="@dimen/card_padding"
            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:textSize="@dimen/card_title_large_size"
            android:id="@+id/title_text_view"
            android:paddingTop="@dimen/card_title_padding"
            android:paddingBottom="@dimen/card_title_padding"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/card_subtitle_frequency"
            android:textSize="@dimen/card_title_small_and_subtitle_size"
            android:id="@+id/frequency_text_view" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/card_title_small_and_subtitle_size"
            android:text="@string/card_subtitle_start"
            android:id="@+id/start_time_text_view" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/card_title_small_and_subtitle_size"
            android:text="@string/card_subtitle_end"
            android:id="@+id/end_time_text_view" />
        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="@dimen/card_title_small_and_subtitle_size"-->
            <!--android:text="active"-->
            <!--android:id="@+id/active_text_view" />-->
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/card_subtitle_active"
            android:checked="true"
            android:id="@+id/projectActiveSwitch"
            android:showText="false"
            android:singleLine="false"
            android:switchPadding="16dp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</FrameLayout >