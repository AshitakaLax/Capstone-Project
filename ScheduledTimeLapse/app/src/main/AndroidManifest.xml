<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ashitakalax.scheduledtimelapse">

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.ashitakalax.scheduledtimelapse.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.ashitakalax.scheduledtimelapse.NewProjectActivity"
            android:label="@string/project_main_name"
            android:parentActivityName="com.ashitakalax.scheduledtimelapse.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ashitakalax.scheduledtimelapse.MainActivity" />
        </activity>

        <activity android:name="com.ashitakalax.scheduledtimelapse.CameraPreviewActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
            <!-- configure this activity to use landscape orientation -->
            <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.ashitakalax.scheduledtimelapse.MainActivity" />
        </activity>

        <activity android:name="com.ashitakalax.scheduledtimelapse.UserManualActivity"
            android:label="@string/user_manual_name"
            android:parentActivityName="com.ashitakalax.scheduledtimelapse.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ashitakalax.scheduledtimelapse.MainActivity" />
        </activity>

        <activity android:name="com.ashitakalax.scheduledtimelapse.SettingsActivity"
            android:label="@string/camera_settings_name"
            android:parentActivityName="com.ashitakalax.scheduledtimelapse.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ashitakalax.scheduledtimelapse.MainActivity" />
        </activity>

        <receiver android:name="com.ashitakalax.scheduledtimelapse.receivers.OnBootReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <receiver
            android:name="com.ashitakalax.scheduledtimelapse.alarm.AlarmReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="alarm.START_ALARM"/>
            </intent-filter>
        </receiver>

        <service android:name=".alarm.AlarmService"
            android:enabled="true"
            android:process=":alarm_service">

        </service>
        <provider
            android:name=".data.CameraSettingsProvider"
            android:authorities="com.ashitakalax.scheduledtimelapse.data"
            android:enabled="true"
            android:exported="true" />
        <provider
            android:name=".data.ProjectSettingsProvider"
            android:authorities="com.ashitakalax.scheduledtimelapse.settings"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>